@model List<DealDouble.Entities.Auction>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12" id="tableContainer">
        <h2>Auctions</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        ActualAmount
                    </th>
                    <th>
                        Starting Time
                    </th>
                    <th>
                        Ending Time
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var Auction in Model)
                {
                    <tr>
                        <td>
                            @Auction.Title
                        </td>
                        <td>
                            @Auction.Description
                        </td>
                        <td>
                            @Auction.ActualAmount
                        </td>
                        <td>
                            @Auction.StartingTime
                        </td>
                        <td>
                            @Auction.EndingTime
                        </td>
                        <td>
                            <button type="button" class="editbtn btn btn-primary" data-ID="@Auction.ID">Edit</button>
                            <button type="button" class="deletebtn btn btn-danger" data-ID="@Auction.ID">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="CreateAuction btn btn-success">Create New Auction</button>
    </div>

    <div id="actionContainer">

    </div>
</div>

<script>
    $(".CreateAuction").click(function () {
        $.ajax({
            type: "Get",
            url: "@Url.Action("Create","Auctions")"
        }).done(function (Response) {
            $("#actionContainer").html(Response);
        }).fail(function (XMLHttpRequest, testStatus, erorrThrown) {
            alert("FAIL");
        });
    });

    $(".editbtn").click(function () {
        $.ajax({
            type: "Get",
            url: "@Url.Action("Edit","Auctions")",
            data: {
                ID: $(this).attr('data-ID')
            }
        }).done(function (response) {
            $("#actionContainer").html(response);
        }).fail(function (XMLHttpRequest, testStatus, erorrThrown) {
            alert("FAIL");
        })
    });
    $(".deletebtn").click(function () {
        var Result = confirm("Are You Want To Delete This Auction ? ")
        if (Result) {
            debugger;
            $.ajax({
           url: "@Url.Action("Delete","Auctions")",
           type: "Post",
            data: {
                ID: $(this).attr('data-ID')
            }
         }).done(function (response) {
             $("#tableContainer").html(response);
        }).fail(function (XMLHttpRequest, testStatus, erorrThrown) {
            alert("FAIL");
        })
        }
    });
</script>