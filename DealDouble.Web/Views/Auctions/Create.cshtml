@model DealDouble.Entities.Auction


<div class="modal-header">
    <h5 class="modal-title">Create Auction</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" id="CreateData">
    <div class="modal-body">
        <div class="form-group">
            <label for="Title">
                Title
            </label>
            <input class="form-control" name="Title" />
        </div>

        <div class="form-group">
            <label for="Description">
                Description
            </label>
            <input class="form-control" name="Description" />
        </div>

        <div class="form-group">
            <label for="ActualAmount">
                ActualAmount
            </label>
            <input class="form-control" name="ActualAmount" />
        </div>

        <div class="form-group">
            <label for="StartingTime">
                StartingTime
            </label>
            <input class="form-control" name="StartingTime" />
        </div>

        <div class="form-group">
            <label for="EndingTime">
                EndingTime
            </label>
            <input class="form-control" name="EndingTime" />
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="saveBtn">Create</button>
    </div>
</form>

<script>
    $("#saveBtn").click(function () {
        debugger;
        $.ajax({
            type: "Post",
            url: "@Url.Action("Create" , "Auctions")",
            data: $("#CreateData").serialize()
        }).done(function (response) {
            $("#FormModal").modal('toggle');
            $("#tableContainer").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        });
    });
</script>
