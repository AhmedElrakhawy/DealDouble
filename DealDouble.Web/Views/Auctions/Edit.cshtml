@model DealDouble.Entities.Auction
<h2>Edit Auction</h2>

<form method="post" id="editForm">
    <input type="hidden" name="ID" value="@Model.ID" />
    <label for="Title">
        Title
    </label>
    <input name="Title" value="@Model.Title" placeholder="@Model.Title" />
    <hr />
    <label for="Description">
        Description
    </label>
    <input name="Description" value="@Model.Description" placeholder="@Model.Description" />
    <hr />
    <label for="ActualAmount">
        ActualAmount
    </label>
    <input name="ActualAmount" value="@Model.ActualAmount" placeholder="@Model.ActualAmount" />
    <hr />
    <label for="StartingTime">
        StartingTime
    </label>
    <input name="StartingTime" value="@Model.StartingTime" placeholder="@Model.StartingTime" />
    <hr />
    <label for="EndingTime">
        EndingTime
    </label>
    <input name="EndingTime" value="@Model.EndingTime" placeholder="@Model.EndingTime" />
    <hr />
    <button type="button" id="saveBtn">Save</button>
</form>

<script>
    $("#saveBtn").click(function () {
        debugger;
        $.ajax({
            type: "Post",
            url: "@Url.Action("Edit","Auctions")",
            data: $("#editForm").serialize()
        }).done(function (response) {
            $("#actionContainer").html("");
            $("#tableContainer").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        });
    });
</script>