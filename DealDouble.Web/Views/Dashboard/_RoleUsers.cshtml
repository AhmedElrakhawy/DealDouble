@model DealDouble.Web.ViewModels.RoleDetailsViewModel

@if (Model != null)
{
    if (Model.Users != null && Model.Users.Count > 0)
    {
        var i = 1;
        <div class="card">
            <h5 class="card-header text-left">Current Role Users</h5>
            <div class="card-body">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@user.FullName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="@Url.Action("UserDetails","Dashboard",new { UserID = user.Id })" class="btn btn-primary">More Details</a>
                            </td>
                        </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No Roles For This User..
        </div>
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        No Roles For This User..
    </div>
}